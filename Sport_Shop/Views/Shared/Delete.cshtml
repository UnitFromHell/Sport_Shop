@model Sport_Shop.Models.User
@{
    ViewBag.Title = "Удаление пользователя";
}

<div>
    <dl class="dl-horizontal">
        <dt>Фамилия</dt>
        <dd>
            @Html.DisplayFor(model => model.FirstNameUser)
        </dd>

        <dt>Имя</dt>
        <dd>
            @Html.DisplayFor(model => model.SecondNameUser)
        </dd>

        <dt>Отчество</dt>
        <dd>
            @Html.DisplayFor(model => model.MiddleNameUser)
        </dd>

        <dt>Логин</dt>
        <dd>
            @Html.DisplayFor(model => model.LoginUser)
        </dd>

        <dt>Пароль</dt>
        <dd>
            @Html.DisplayFor(model => model.PasswordUser)
        </dd>

        <dt>Номер телефона</dt>
        <dd>
            @Html.DisplayFor(model => model.PhoneNumber)
        </dd>

        <dt>Адрес электронной почты</dt>
        <dd>
            @Html.DisplayFor(model => model.Email)
        </dd>
    </dl>

    <div>
        <form asp-controller="Home" asp-action="Delete" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить"/>
            </div>
        </form>
    </div>
</div>