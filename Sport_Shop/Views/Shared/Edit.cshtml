@model Sport_Shop.Models.User
@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>
<h4>User</h4>
<hr />

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div> 
    <input type="hidden" asp-for="IdUser" />
    <div class="form-group">
        <label asp-for="FirstNameUser" class="control-label"></label>
        <input asp-for="FirstNameUser" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="SecondNameUser" class="control-label"></label>
        <input asp-for="SecondNameUser" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="MiddleNameUser" class="control-label"></label>
        <input asp-for="MiddleNameUser" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="LoginUser" class="control-label"></label>
        <input asp-for="LoginUser" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PasswordUser" class="control-label"></label>
        <input type="password" asp-for="PasswordUser" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="PhoneNumber" class="control-label"></label>
        <input type="tel" pattern="+7([0-9]{3})-[0-9]{3}-[0-9]{2}-[0-9]{2}" asp-for="PhoneNumber" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Email" class="control-label"></label>
        <input type="email" asp-for="Email" class="form-control" />
    </div>

    <div class="form-group">
        <input type="submit" value = "Save" class="btn btn-primary" />
    </div>
</form>

